<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= link_to book.title, book %></strong></td>
        <td><strong><%= book.author.full_author_name %></strong></td>
        <td><strong><%= book.category %></strong></td>
        <td><strong><%= number_to_currency(book.price) %></strong></td>
        <td><%= image_tag book.photo, class:"img-rounded" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

