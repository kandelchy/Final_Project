<p id="notice"><%= notice %></p>



<br><br>



<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th>Author</th>
      <th><%= sortable "category" %></th>
      <th><%= sortable "price" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><strong><%= link_to book.title, book %></strong></td>
        <td><strong><%= book.author.full_author_name %></strong></td>
        <td><strong><%= book.category %></strong></td>
        <td><strong><%= number_to_currency(book.price) %></strong></td>
        <td><%= image_tag book.image.thumb.url, class:"img-rounded" %></td>
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= will_paginate @books, renderer: BootstrapPagination::Rails %>  


<% if @books.blank? %>
  <h4>There are no Books containing the term <%= params[:search] %>.</h4>
<% end %>