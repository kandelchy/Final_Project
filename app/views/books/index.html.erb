<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>
<table>
  <thead>
    <tr>

      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Price</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>

        <td><%= link_to book.title, book %></td>
        <td><%= book.author.full_author_name %></td>
        <td><%= book.category %></td>
        <td><%= book.price %></td>
        <th>&nbsp&nbsp&nbsp</th>
        <td><%= image_tag book.photo %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

