<br><br><br>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author.full_author_name %></td>
        <td><%= book.category %></td>
        <td><%= book.price %></td>
        <td><%= image_tag book.photo, class:"img-rounded" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

