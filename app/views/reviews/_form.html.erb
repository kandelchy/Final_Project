<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.select :user_id, User.all.collect {|p| [p.email, p.id]}, include_blank: true %> 
  </div>
  <div class="field">
    <%= f.label :book_id %><br>
    <%= f.select :book_id, Book.all.collect {|p| [p.title, p.id]}, include_blank: true %> 
  </div>
  <div class="field">
    <%= f.label :rate %><br>
    <%= f.text_field :rate %>
  </div>
  <div class="field">
    <%= f.label :rev_text %><br>
    <%= f.text_field :rev_text %>
  </div>
  <div class="field">
    <%= f.label :rev_date %><br>
    <%= f.date_select :rev_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
