<%=  form_for @message, :url => contact_path do |form| %>
  <fieldset class="form-group">
    <div class="form-group">
      <%= form.label :name, class:"control-label col-sm-2" %>
      <%= form.text_field :name %>
    </div>
    
    <div class="form-group">
      <%= form.label :email , class:"control-label col-sm-2" %>
      <%= form.text_field :email %>
    </div>
    <div class="form-group">
      <%= form.label :subject , class:"control-label col-sm-2" %>
      <%= form.text_field :subject %>
    </div>
    
    <div class="form-group">
      <%= form.label :body , class:"control-label col-sm-2" %>
      <%= form.text_area :body %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Send", class:"btn btn-success" %>
    <%= link_to "Cancel", books_path, class:"btn btn-default"%>
  </fieldset>
<% end %>